---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'releases'>['data'];

const { title, version, pubDate, description } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={`${title} | Sanpou`} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.3em 0;
			}
			.version-badge {
				display: inline-block;
				background: var(--accent);
				color: white;
				padding: 0.2em 0.7em;
				border-radius: 6px;
				font-size: 0.7em;
				font-weight: 700;
				margin-bottom: 0.5em;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.back-link {
				display: inline-block;
				margin-top: 2em;
				color: var(--accent);
				text-decoration: none;
				font-weight: 600;
			}
			.back-link:hover {
				text-decoration: underline;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<span class="version-badge">v{version}</span>
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
					<a href="/releases" class="back-link">&larr; All releases</a>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
