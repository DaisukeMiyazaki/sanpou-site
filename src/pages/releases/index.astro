---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE } from '../../consts';

const base = import.meta.env.BASE_URL;
const releases = (await getCollection('releases')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Releases | ${SITE_TITLE}`} description="Release notes and changelog for Sanpou." />
		<style>
			main {
				width: 720px;
			}
			h1 {
				margin-bottom: 1em;
			}
			.release-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.release-list li {
				margin-bottom: 1.5em;
				padding: 1.2em 1.5em;
				background: white;
				border-radius: 12px;
				box-shadow: 0 2px 12px rgba(var(--gray), 12%);
				transition: transform 0.15s ease, box-shadow 0.15s ease;
			}
			.release-list li:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 20px rgba(var(--gray), 20%);
			}
			.release-list a {
				text-decoration: none;
				color: inherit;
			}
			.release-header {
				display: flex;
				align-items: center;
				gap: 0.6em;
				margin-bottom: 0.3em;
			}
			.version-badge {
				display: inline-block;
				background: var(--accent);
				color: white;
				padding: 0.15em 0.6em;
				border-radius: 6px;
				font-size: 0.75em;
				font-weight: 700;
			}
			.release-title {
				margin: 0;
				font-size: 1.2em;
			}
			.release-meta {
				color: rgb(var(--gray));
				font-size: 0.8em;
				margin-bottom: 0.3em;
			}
			.release-desc {
				color: rgb(var(--gray-dark));
				font-size: 0.9em;
				margin: 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Releases</h1>
			<ul class="release-list">
				{
					releases.map((release) => (
						<li>
							<a href={`${base}releases/${release.id}/`}>
								<div class="release-header">
									<span class="version-badge">v{release.data.version}</span>
									<h3 class="release-title">{release.data.title}</h3>
								</div>
								<p class="release-meta">
									<FormattedDate date={release.data.pubDate} />
								</p>
								<p class="release-desc">{release.data.description}</p>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
