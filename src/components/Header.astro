---
import { SITE_TITLE, APP_STORE_URL } from '../consts';
import HeaderLink from './HeaderLink.astro';

const base = import.meta.env.BASE_URL;
---

<header>
	<nav>
		<h2><a href={base} class="site-logo"><img src={`${base}app-icon.png`} alt="Sanpou" width="32" height="32" />{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={base}>Home</HeaderLink>
			<HeaderLink href={`${base}blog`}>Blog</HeaderLink>
			<HeaderLink href={`${base}releases`}>Releases</HeaderLink>
		</div>
		<div class="social-links">
			<a href={APP_STORE_URL} target="_blank" class="app-store-link">
				<svg viewBox="0 0 24 24" aria-hidden="true" width="28" height="28">
					<path fill="currentColor" d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
				</svg>
				<span class="sr-only">Download on the App Store</span>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	.site-logo {
		display: flex;
		align-items: center;
		gap: 0.4em;
	}
	.site-logo img {
		border-radius: 7px;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.app-store-link {
		display: flex;
		align-items: center;
		padding: 0.5em;
		border-bottom: none !important;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
