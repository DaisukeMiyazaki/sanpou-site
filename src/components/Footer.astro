---
import { APP_STORE_URL } from '../consts';
const today = new Date();
const base = import.meta.env.BASE_URL;
---

<footer>
	<p>&copy; {today.getFullYear()} Sanpou. Built with care by a solo developer.</p>
	<div class="footer-links">
		<a href={APP_STORE_URL} target="_blank">App Store</a>
		<span class="separator">|</span>
		<a href={`${base}releases`}>Release Notes</a>
		<span class="separator">|</span>
		<a href={`${base}blog`}>Blog</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	footer p {
		margin: 0 0 0.5em 0;
		font-size: 0.9em;
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 0.5em;
		font-size: 0.85em;
	}
	.footer-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.footer-links a:hover {
		color: var(--accent);
	}
	.separator {
		color: rgb(var(--gray-light));
	}
</style>
